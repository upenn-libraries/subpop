<%# Conditionally set remote: true. %>
<% modal ||= @modal %>
<!-- modal is <%= modal -%> -->
<% remote = modal ? true : false %>
<%= form_for @name, builder: SubpopFormbuilder, remote: remote, html: { class: 'form-horizontal' }  do |f| %>

<div class="error-div">
  <%= render '/shared/error_messages', object: @name %>
</div>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", autofocus: true %>
    </div>
  </div>

<!--   <div class="form-group">
    <%= f.label :gender, class: "col-sm-3 control-label required" %>
    <div class="col-sm-8">
      <%= f.select :gender, Names::GENDER, { include_blank: true }, { class: "form-control" } %>
    </div> -->

  <div class="form-group">
    <%= f.label :year_start, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :year_start, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :year_end, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :year_end, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :viaf_id, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :viaf_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :comment, class: "col-sm-3 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :comment, class: "form-control" %>
    </div>
  </div>


  <div class="actions">
    <% if modal -%>
    <button type="button" class="btn btn-default" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Cancel</span></button>
    <% else -%>
    <%= link_to 'Cancel', names_path, class: "btn btn-default" %>
    <% end -%>
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
