<%= form_for @remediation, builder: SubpopFormbuilder, html: { multipart: true, class: "form-horizontal" } do |f| %>

  <% if @remediation.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@remediation.errors.count, "error") %>.
      </div>
      <ul>
        <% @remediation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :spreadsheet, class: "col-sm-3 control-label" %>
    <div class="col-sm-8"><%= f.file_field :spreadsheet, class: "form-control" %></div>
  </div>

  <div class="actions">
    <%= f.submit "Upload", class: "btn btn-success" %>
  </div>
<% end %>
