<% image_size ||= :small %>
<div class="thumbnail">
  <%= link_to image_tag(item.photo.image.url(image_size),
    class: 'img-responsive'), item.photo.image.url(:original),
    target: '_blank', 'data-toggle' => 'tooltip',
    title: 'Click to open in new window.' -%>
  <% if item.on_flickr? -%>
  <div class="caption">
    <p><a target="_blank" href="<%= item.photopage_url -%>">View on Flickr <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span></a></p>
    </div>
  <% end -%>
</div>